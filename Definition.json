// // // // // // // // // // //
// Version 1: With Global stats

{
	// Global stats
	"C&K": {		// How to compute this? Weighted sums?
		"WMC": 0,
		"DIT": 0,
		"NOC": 0,
		"CBO": 0,
		// "RFC": 0,
		// "LCOM" : 0
	},
	
	"Lines": 0,		// SUM
	"LOC": 0,		// SUM
	"CLOC": 0,		// SUM
	"CC": 0,		// SUM

	"Halstead": {	// Operands and Operators must be merged. Then everything has to be recomputed.
		"Operands": {
			"..." : 0,
		},
		"Operators": {
			"..." : 0,
		},

		"n1": 0.0,
		"n2": 0.0,
		"N1": 0.0,
		"N2": 0.0,
		"Vocabulary": 0.0,
		"Effort": 0.0,
		"Programming time": 0.0,
		"Estimated program length": 0.0,
		"Length": 0.0,
		"Volume": 0.0,
		"Purity ratio": 0.0,
		"Difficulty": 0.0
	},

	// "MI": 0.0,	// Can it be calculated as the SUM of all the MI@functions?

	"files": [{
		"filename": "/path/to/file",
		"type": "C",
		
		"C&K": {
			"WMC": 0,
			"DIT": 0,
			"NOC": 0,
			"CBO": 0,
			// "RFC": 0,
			// "LCOM" : 0
		},

		"Lines": 0,
		"LOC": 0,
		"CLOC": 0,
		"CC": 0,
		"WMC": 0.0,		// McCabe's Weighted Method Count

		"Halstead": {
			"Operands": {
				"..." : 0,
			},
			"Operators": {
				"..." : 0,
			},

			"n1": 0.0,
			"n2": 0.0,
			"N1": 0.0,
			"N2": 0.0,
			"Vocabulary": 0.0,
			"Effort": 0.0,
			"Programming time": 0.0,
			"Estimated program length": 0.0,
			"Length": 0.0,
			"Volume": 0.0,
			"Purity ratio": 0.0,
			"Difficulty": 0.0
		},

		// "MI": 0.0,	// This is not generated by any of the tools. Can it be calculated as the SUM of all the MI@functions?


		"functions":[{	// Per-function metrics
			"function name": "name(...)",
			"line number": 1,

			"MI": 0.0,
			"CC": 0.0,

			"LOC": 0,
			"CLOC": 0,
			"Lines": 0,

			// C&K cannot be calculated for single functions
			// 
		},]
	},]
}


